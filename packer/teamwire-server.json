{
	"variables": {
		"backend_release": "",
		"dockerhub_password": "",
		"dockerhub_username": "",
		"http_directory": "",
		"iso_url": "https://cdimage.debian.org/debian-cd/current/amd64/iso-cd/debian-9.8.0-amd64-netinst.iso",
		"iso_checksum": "cc4a6bd50925c1c4af98049060e304494bc9da61eb5eb272c556d67608de14d4e6a4b8bc1c9412a0f810083912e228569f3771ffffa7174538f3e26f45a05245",
		"iso_checksum_type": "sha512",
		"vm_name": "localhost",
		"offline_installation": "",
		"ssh_username": "teamwire",
		"ssh_password": "",
		"ssh_wait_timeout": "900s",
		"shutdown_command": "sudo shutdown -P now"
	},
	"builders": [
		{
			"name": "teamwire-server-vmware",
			"type": "vmware-iso",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"http_directory": "{{user `http_directory`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
			"shutdown_command": "{{user `shutdown_command`}}",
			"boot_wait": "5s",
			"boot_command": [
				"<esc><wait>",
				"install auto ",
				"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian.cfg ",
				"debian-installer=en_US locale=en_US keymap=de ",
				"hostname={{ .Name }} domain=localdomain",
				"<enter>"
			],
			"headless": true,
			"guest_os_type": "debian8-64",
			"vmx_data": {
				"memsize": "2048",
				"numvcpus": "2"
			}
		},
		{
			"name": "teamwire-server-vmware-vagrant",
			"type": "vmware-iso",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"http_directory": "{{user `http_directory`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
			"shutdown_command": "{{user `shutdown_command`}}",
			"boot_wait": "5s",
			"boot_command": [
				"<esc><wait>",
				"install auto ",
				"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian.cfg ",
				"debian-installer=en_US locale=en_US keymap=de ",
				"hostname={{ .Name }} domain=localdomain",
				"<enter>"
			],
			"headless": true,
			"guest_os_type": "debian8-64",
			"vmx_data": {
				"memsize": "2048",
				"numvcpus": "2"
			}
		},
		{
			"name": "teamwire-server-virtualbox-vagrant",
			"type": "virtualbox-iso",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"http_directory": "{{user `http_directory`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
			"shutdown_command": "{{user `shutdown_command`}}",
			"boot_wait": "5s",
			"boot_command": [
				"<esc><wait>",
				"install auto ",
				"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian.cfg ",
				"debian-installer=en_US locale=en_US keymap=de ",
				"hostname={{ .Name }} domain=localdomain",
				"<enter>"
			],
			"guest_additions_mode": "disable",
			"guest_os_type": "Debian_64",
			"headless": "true"
		},
		{
			"name": "teamwire-server-kvm",
			"type": "qemu",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"http_directory": "{{user `http_directory`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
			"shutdown_command": "{{user `shutdown_command`}}",
			"boot_wait": "5s",
			"boot_command": [
				"<esc><wait>",
				"install auto ",
				"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian.cfg ",
				"debian-installer=en_US locale=en_US keymap=de ",
				"hostname={{ .Name }} domain=localdomain",
				"<enter>"
			],
			"format": "qcow2",
			"accelerator": "kvm",
			"headless": "true"
		},
		{
			"name": "teamwire-server-kvm-vagrant",
			"type": "qemu",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"http_directory": "{{user `http_directory`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
			"shutdown_command": "{{user `shutdown_command`}}",
			"boot_wait": "5s",
			"boot_command": [
				"<esc><wait>",
				"install auto ",
				"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/debian.cfg ",
				"debian-installer=en_US locale=en_US keymap=de ",
				"hostname={{ .Name }} domain=localdomain",
				"<enter>"
			],
			"format": "qcow2",
			"accelerator": "kvm",
			"headless": "true"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"inline": "sudo sed -i -e 's|^\\(deb-src\\)|# \\1|' /etc/apt/sources.list"
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/vm-guest-tools.sh"
			]
		},
		{
			"type": "ansible-local",
			"command": "ansible-playbook --sudo",
			"playbook_file": "../ansible/site.yml",
			"playbook_dir": "../ansible"
		},
		{
			"type": "shell",
			"scripts": [
				"scripts/make-unique.sh",
				"scripts/prepare-offline-installation.sh",
				"scripts/fix-network.sh",
				"scripts/shrink-image.sh"
			],
			"environment_vars": [
				"BACKEND_RELEASE={{user `backend_release`}}",
				"DOCKERHUB_PASSWORD={{user `dockerhub_password`}}",
				"DOCKERHUB_USERNAME={{user `dockerhub_username`}}",
				"OFFLINE_INSTALLATION={{user `offline_installation`}}"
			]
		}
	],
	"post-processors": [
		{
			"type": "vagrant",
			"output": "{{.BuildName}}.box",
			"except": ["teamwire-server-vmware", "teamwire-server-kvm"]
		},
		{
			"type": "compress",
			"output": "teamwire-server-kvm.tar.gz",
			"only": ["teamwire-server-kvm"]
		}
	]
}
