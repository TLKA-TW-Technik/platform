{
	"variables": {
		"http_directory": "",
		"iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.1-server-amd64.iso",
		"iso_checksum": "946a6077af6f5f95a51f82fdc44051c7aa19f9cfc5f737954845a6050543d7c2",
		"iso_checksum_type": "sha256",
		"vm_name": "teamwire-server",
		"ssh_username": "vagrant",
		"ssh_password": "vagrant",
		"ssh_wait_timeout": "600s",
		"shutdown_command": "sudo shutdown -P now"
	},
	"builders": [
		{
			"name": "vmware-teamwire-server",
			"type": "vmware-iso",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"http_directory": "{{user `http_directory`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
			"shutdown_command": "{{user `shutdown_command`}}",
			"boot_wait": "5s",
			"boot_command": [
				"<esc><esc><enter><wait>",
				"/install/vmlinuz noapic ",
				"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
				"debian-installer=en_US auto locale=en_US kbd-chooser/method=de ",
				"hostname={{ .Name }} ",
				"fb=false debconf/frontend=noninteractive ",
				"keyboard-configuration/modelcode=SKIP keyboard-configuration/layoutcode=de ",
				"keyboard-configuration/variantcode=nodeadkeys console-setup/ask_detect=false ",
				"initrd=/install/initrd.gz -- <enter>"
			],
			"tools_upload_flavor": "linux"
		},
		{
			"name": "kvm-teamwire-server",
			"type": "qemu",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
			"http_directory": "{{user `http_directory`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_password": "{{user `ssh_password`}}",
			"ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
			"shutdown_command": "{{user `shutdown_command`}}",
			"boot_wait": "5s",
			"boot_command": [
				"<esc><esc><enter><wait>",
				"/install/vmlinuz noapic ",
				"preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
				"debian-installer=en_US auto locale=en_US kbd-chooser/method=de ",
				"hostname={{ .Name }} ",
				"fb=false debconf/frontend=noninteractive ",
				"keyboard-configuration/modelcode=SKIP keyboard-configuration/layoutcode=de ",
				"keyboard-configuration/variantcode=nodeadkeys console-setup/ask_detect=false ",
				"initrd=/install/initrd.gz -- <enter>"
			],
			"format": "qcow2",
			"accelerator": "kvm",
			"headless": "true"
		}
	],
	"provisioners": [
		{
			"type": "shell",
			"scripts": [
				"scripts/vagrant_key.sh",
				"scripts/vm-guest-tools.sh",
				"scripts/install_ansible.sh"
			]
		},
		{
			"type": "ansible-local",
			"command": "ansible-playbook --sudo",
			"playbook_file": "../ansible/site.yml",
			"playbook_dir": "../ansible"
		},
		{
			"type": "shell",
			"inline": "sudo apt-get clean"
		}
	],
	"post-processors": ["vagrant"]
}
