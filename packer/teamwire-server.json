{
	"variables": {
		"http_directory": "",
		"iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.2-server-amd64.iso",
		"iso_checksum": "8acd2f56bfcba2f7ac74a7e4a5e565ce68c024c38525c0285573e41c86ae90c0",
		"iso_checksum_type": "sha256",
		"vm_name": "teamwire-server",
		"ssh_username": "teamwire",
		"ssh_key_path": "",
		"ssh_wait_timeout": "900s",
		"shutdown_command": "sudo shutdown -P now"
	},
	"builders": [
		{
			"name": "teamwire-server-vmware",
			"type": "vmware-iso",
			"vm_name": "{{user `vm_name`}}",
			"iso_url": "{{user `iso_url`}}",
			"iso_checksum": "{{user `iso_checksum`}}",
			"iso_checksum_type": "{{user `iso_checksum_type`}}",
