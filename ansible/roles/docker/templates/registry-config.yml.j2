version: 0.1
log:
  fields:
    service: registry
storage:
    cache:
        blobdescriptor: inmemory
    filesystem:
        rootdirectory: /var/lib/registry
http:
    addr: :5000
    headers:
        X-Content-Type-Options: [nosniff]
health:
  storagedriver:
    enabled: true
    interval: 10s
    threshold: 3
{% if not offline_mode.stat.exists %}
# https://github.com/kubernetes-sigs/kind/issues/1775
# https://docs.openshift.com/container-platform/3.11/install_config/registry/registry_known_issues.html
# Pull through proxy not working. Should be fixed in version >0.9.X
#proxy:
#      remoteurl: {{ dockerhub_url }}
#      username: {{ dockerhub_username }}
#      password: {{ dockerhub_password }}
{% endif %}
