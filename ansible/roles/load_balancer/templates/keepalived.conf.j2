vrrp_instance VI_1 {
    state {{ 'MASTER' if inventory_hostname == groups['load_balancers'][0] else 'BACKUP' }}
    interface eth1
    virtual_router_id 51
    priority {{ '200' if inventory_hostname == groups['load_balancers'][0] else '150' }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ loadbalancer_password }}
    }
    virtual_ipaddress {
        {{ loadbalancer_external_ip }} dev eth0
    }
}
