vrrp_script chk_nginx {
        script "killall -0 nginx"
        interval 2
        weight -2
}

vrrp_instance VI_1 {
    state {{ 'MASTER' if inventory_hostname == groups['load_balancers'][0] else 'BACKUP' }}
    interface eth1
    virtual_router_id 51
    priority {{ '101' if inventory_hostname == groups['load_balancers'][0] else '100' }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ loadbalancer_password }}
    }
    virtual_ipaddress {
        {{ loadbalancer_external_ip }} dev eth0
    }
    track_script {
        chk_nginx
    }
}
